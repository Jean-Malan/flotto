<p id="notice"><%= notice %></p>

<h1>Listing Receipt Entries</h1>

<table>
  <thead>
    <tr>
      <th>Transaction</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @receipt_entries.each do |receipt_entry| %>
      <tr>
        <td><%= receipt_entry.transaction_id %></td>
        <td><%= link_to 'Show', receipt_entry %></td>
        <td><%= link_to 'Edit', edit_receipt_entry_path(receipt_entry) %></td>
        <td><%= link_to 'Destroy', receipt_entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

