<p id="notice"><%= notice %></p>

<h1>Vat Account Balances</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Gl account</th>
      <th>Reference</th>
      <th>Description</th>
      <th>Vat amount</th>
      <th>User</th>
      <th>Sales entry</th>
      <th>Purchase entry</th>
      <th>Journal entry</th>
      <th>Sale</th>
      <th>Purchase</th>
      <th>Financial transaction</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vat_account_balances.each do |vat_account_balance| %>
      <tr>
        <td><%= vat_account_balance.date %></td>
        <td><%= vat_account_balance.gl_account_id %></td>
        <td><%= vat_account_balance.reference %></td>
        <td><%= vat_account_balance.description %></td>
        <td><%= vat_account_balance.vat_amount %></td>
        <td><%= vat_account_balance.user_id %></td>
        <td><%= vat_account_balance.sales_entry_id %></td>
        <td><%= vat_account_balance.purchase_entry_id %></td>
        <td><%= vat_account_balance.journal_entry_id %></td>
        <td><%= vat_account_balance.sale_id %></td>
        <td><%= vat_account_balance.purchase_id %></td>
        <td><%= vat_account_balance.financial_transaction_id %></td>
        <td><%= link_to 'Show', vat_account_balance %></td>
        <td><%= link_to 'Edit', edit_vat_account_balance_path(vat_account_balance) %></td>
        <td><%= link_to 'Destroy', vat_account_balance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

