<p id="notice"><%= notice %></p>

<h1>Listing Journal Entries</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Amount</th>
      <th>Account</th>
      <th>Debit</th>
      <th>Credit</th>
      <th>Date</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @journal_entries.each do |journal_entry| %>
      <tr>
        <td><%= journal_entry.description %></td>
        <td><%= journal_entry.amount %></td>
        <td><%= journal_entry.account_id %></td>
        <td><%= journal_entry.debit %></td>
        <td><%= journal_entry.credit %></td>
        <td><%= journal_entry.date %></td>
        <td><%= journal_entry.user_id %></td>
        <td><%= link_to 'Show', journal_entry %></td>
        <td><%= link_to 'Edit', edit_journal_entry_path(journal_entry) %></td>
        <td><%= link_to 'Destroy', journal_entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

