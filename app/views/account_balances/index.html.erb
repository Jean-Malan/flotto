<p id="notice"><%= notice %></p>

<h1>Account Balances</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Account</th>
      <th>Reference</th>
      <th>Amount</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @account_balances.each do |account_balance| %>
      <tr>
        <td><%= account_balance.date %></td>
        <td><%= account_balance.account_id %></td>
        <td><%= account_balance.reference %></td>
        <td><%= account_balance.amount %></td>
        <td><%= account_balance.user_id %></td>
        <td><%= link_to 'Show', account_balance %></td>
        <td><%= link_to 'Edit', edit_account_balance_path(account_balance) %></td>
        <td><%= link_to 'Destroy', account_balance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

