<p id="notice"><%= notice %></p>

<h1>Listing Purchase Entries</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Description</th>
      <th>Account</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Total price</th>
      <th>Purchase</th>
      <th>User</th>
      <th>Gl account</th>
      <th>Vat type</th>
      <th>Vat amount</th>
      <th>Net price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchase_entries.each do |purchase_entry| %>
      <tr>
        <td><%= purchase_entry.product_id %></td>
        <td><%= purchase_entry.description %></td>
        <td><%= purchase_entry.account_id %></td>
        <td><%= purchase_entry.quantity %></td>
        <td><%= purchase_entry.price %></td>
        <td><%= purchase_entry.total_price %></td>
        <td><%= purchase_entry.purchase_id %></td>
        <td><%= purchase_entry.user_id %></td>
        <td><%= purchase_entry.gl_account_id %></td>
        <td><%= purchase_entry.vat_type %></td>
        <td><%= purchase_entry.vat_amount %></td>
        <td><%= purchase_entry.net_price %></td>
        <td><%= link_to 'Show', purchase_entry %></td>
        <td><%= link_to 'Edit', edit_purchase_entry_path(purchase_entry) %></td>
        <td><%= link_to 'Destroy', purchase_entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

